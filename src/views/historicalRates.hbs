<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Historical Rates</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Historical Rates</h3>
          </div>
          <div class="card-body">
            <ul class="list-group">
              {{#each rates}}
              <li class="list-group-item" onclick="showDetails('{{ currency }}', '{{ rate }}')" style="cursor: pointer;">
                Click here to see {{ currency }} data
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
        <div id="detailsContainer" class="mt-3" style="display: none;">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Currency Details</h5>
              <p class="card-text">Currency: <span id="currency"></span></p>
              <p class="card-text">Rate: <span id="rate"></span></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function showDetails(currency, rate) {
      const detailsContainer = document.getElementById('detailsContainer');
      const currencySpan = document.getElementById('currency');
      const rateSpan = document.getElementById('rate');

      currencySpan.textContent = currency;
      rateSpan.textContent = rate;

      detailsContainer.style.display = 'block';
    }
  </script>
</body>
</html>
